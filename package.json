{
  "name": "colonies",
  "version": "1.0.0",
  "private": true,
  "description": "Procedural terrain generator with historical settlement simulation",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm --filter @colonies/core test:watch",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "dev": "pnpm --filter @colonies/frontend dev",
    "generate": "pnpm --filter @colonies/cli generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tomen/colonies.git"
  },
